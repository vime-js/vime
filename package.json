{
  "name": "vime",
  "version": "0.0.0",
  "description": "Customizable, extensible, accessible and framework agnostic media player.",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "types": "@types/",
  "files": [
    "dist/",
    "@types/",
    "custom-elements.json"
  ],
  "sideEffects": [
    "./dist/**/vm-*.ts",
    "./dist/bundle/elements.js"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./bundle": "./dist/bundle/",
    "./core": "./dist/core/",
    "./providers": "./dist/providers/",
    "./skins": "./dist/skins/",
    "./ui": "./dist/ui/",
    "./controls": "./dist/ui/controls/",
    "./menu": "./dist/ui/menu/",
    "./settings": "./dist/ui/settings/",
    "./time": "./dist/ui/time/",
    "./package.json": "./package.json",
    "./custom-elements.json": "./custom-elements.json"
  },
  "contributors": [
    "Dave Furfero <furf@furf.com>",
    "Rahim Alwer <rahim_alwer@outlook.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vime-js/vime.git"
  },
  "bugs": {
    "url": "https://github.com/vime-js/vime/issues"
  },
  "scripts": {
    "build": "run-s clean build:esm",
    "build:esm": "tsc -m es6 --outDir dist -p tsconfig-lit.json",
    "build:watch": "npm run build:esm -- -w",
    "clean": "rimraf dist && rimraf @types",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .ts --quiet . --ignore-path .gitignore",
    "lint:prettier": "prettier . --check --ignore-path .gitignore --loglevel warn",
    "format": "run-s format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run lint:prettier -- --write",
    "release": "npx semantic-release --branches next",
    "test": "wtr \"src/**/*.test.ts\"",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "@wcom/context": "^2.0.0",
    "@wcom/events": "^1.0.0",
    "clsx": "^1.1.1",
    "lit-element": "^2.0.0"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.32",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "@web/dev-server-esbuild": "^0.2.6",
    "@web/test-runner": "^0.9.7",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-lit": "^1.3.0",
    "eslint-plugin-wc": "^1.2.0",
    "lit-analyzer": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.1",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "publishConfig": {
    "tag": "next",
    "access": "public"
  }
}
