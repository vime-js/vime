{
  "name": "@vime/react",
  "version": "5.0.31",
  "description": "React bindings for the Vime media player.",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "contributors": [
    "Rahim Alwer <rahim_alwer@outlook.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vime-js/vime.git"
  },
  "bugs": {
    "url": "https://github.com/vime-js/vime/issues"
  },
  "scripts": {
    "build": "rimraf dist && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --target es5 --module commonjs --outDir dist/cjs --project tsconfig.build.json",
    "build:esm": "tsc --target es6 --module es6 --outDir dist/esm --project tsconfig.build.json",
    "serve": "concurrently vite \"npm run serve:typecheck\"",
    "serve:typecheck": "tsc --project tsconfig.json --watch"
  },
  "dependencies": {
    "@seznam/compose-react-refs": "^1.0.4",
    "@vime/core": "5.0.31"
  },
  "devDependencies": {
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react-refresh": "^1.3.5",
    "concurrently": "^6.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5",
    "vite": "^2.4.1"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "vime",
    "player",
    "media",
    "react",
    "audio",
    "video",
    "html5",
    "stenciljs",
    "youtube",
    "dailymotion",
    "vimeo",
    "hls",
    "dash",
    "custom"
  ]
}
