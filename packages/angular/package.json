{
  "name": "@vime/angular",
  "version": "2.1.0",
  "description": "Collection of Angular components to build and customize your own media player.",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "contributors": [
    "Rahim Alwer <rahim_alwer@outlook.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vime-js/vime.git"
  },
  "bugs": {
    "url": "https://github.com/vime-js/vime/issues"
  },
  "scripts": {
    "build": "rimraf dist && npm run build:ng",
    "build:ng": "ng-packagr -p package.json",
    "release": "semantic-release -e ../../scripts/semantic-release"
  },
  "dependencies": {
    "@vime/core": "^2.0.0",
    "tslib": "^2.0.1"
  },
  "devDependencies": {
    "@angular/common": "^10.0.14",
    "@angular/compiler": "^10.0.14",
    "@angular/compiler-cli": "^10.0.14",
    "@angular/core": "^10.0.14",
    "ng-packagr": "^10.1.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "@angular/common": "^10.0.9",
    "@angular/core": "^10.0.9",
    "rxjs": "^6.6.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "vime",
    "player",
    "media",
    "angular",
    "audio",
    "video",
    "html5",
    "stenciljs",
    "youtube",
    "dailymotion",
    "vimeo",
    "hls",
    "dash",
    "custom"
  ],
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts"
    },
    "whitelistedNonPeerDependencies": [
      "@vime/core"
    ]
  }
}
